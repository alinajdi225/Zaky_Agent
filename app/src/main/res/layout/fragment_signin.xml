<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".SignInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="521dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Button 1 -->
            <Button
                android:id="@+id/button"
                android:layout_width="327dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/letter1"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="العربية"
                android:stateListAnimator="@null"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Button 2 -->

            <Button
                android:id="@+id/button2"
                android:layout_width="327dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/letter3"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:fontFamily="@font/poppinsregular"
                android:lineHeight="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:stateListAnimator="@null"
                android:text="English"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/buttontext"
                android:textFontWeight="400"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="327dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/letter2"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:stateListAnimator="@null"
                android:text="كوردي"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"></Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="27dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Language"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textFontWeight="600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="98dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Select your language"
        android:textFontWeight="600"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
